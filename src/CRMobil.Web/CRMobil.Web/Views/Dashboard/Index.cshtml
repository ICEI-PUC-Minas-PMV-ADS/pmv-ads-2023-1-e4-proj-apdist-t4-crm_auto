<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/src/img/SVG-CRMobil-removebg.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="/src/styles/styles.css" />
    <link rel="stylesheet" href="/src/styles/cards.css" />
    <title>CRMobil</title>
</head>

<body>
    <!--Cabeçalho-->
    <partial name="/Views/Shared/_LayoutMenu.cshtml" />

    <!-- cards -->

    <div class="container mt-5">
        <div class="row row-cols-1 row-cols-md-3 g-4 mt-5 mx-auto">
            <div class="col-md-4">
                <div class="card card card shadow my-card">
                    <div class="card-body">
                        <div class="mb-3 h1 text-end"><i class="bi bi-calendar3"></i></div>
                        <h5 class="card-title">5</h5>
                        <p class="card-text">Serviços em andamento</p>
                        <a class="btn btn-primary btn custom-btn-color">visualizar serviços</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card shadow my-card">
                    <div class="card-body">
                        <div class="mb-3 h1 text-end"><i class="bi bi-phone-vibrate"></i></div>
                        <h5 class="card-title">2</h5>
                        <p class="card-text">Orçamentos fechados</p>
                        <a class="btn btn-primary btn custom-btn-color">Visulizar orçamentos</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card shadow my-card">
                    <div class="card-body">
                        <div class="mb-3 h1 text-end"><i class="bi bi-car-front"></i></div>
                        <h5 class="card-title">10</h5>
                        <p class="card-text">Clientes cadastrados</p>
                        <a class="btn btn-primary btn custom-btn-color" asp-controller="Cliente" asp-action="Index">Visulizar clientes</a>
                    </div>
                </div>
            </div>


            <div class="col-md-4">
                <div class="card" card shadow style="background-color: #6C757D;">
                    <div class="card-body">
                        <div class="mb-3 h1 text-end"><i class="bi bi-calendar3"></i></div>
                        <h5 class="card-title" style="color:white; font-size: 50px;">7</h5>
                        <p class="card-text" style="color: white;">Funcionários</p>
                        <a class="btn btn-primary btn custom-btn-color" asp-controller="Usuario" asp-action="Index">Visualizar funcionários</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card" card shadow style="background-color: #6C757D">
                    <div class="card-body">
                        <div class="mb-3 h1 text-end"><i class="bi bi-car-front"></i></div>

                        <h5 class="card-title" style="color: white; font-size: 50px;">2</h5>
                        <p class="card-text" style="color: white; margin-top: 5px;">Oficinas</p>
                        <a class="btn btn-primary btn custom-btn-color" asp-controller="Oficina" asp-action="Index">Visualizar oficinas</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>